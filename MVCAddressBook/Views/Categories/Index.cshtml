@model IEnumerable<MVCAddressBook.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container-fluid d-flex justify-content-center">

    <div class="row mt-5 glass-style">

        <h1>Categories</h1>

        <p style="font-size: 30px">
            <a asp-action="Create"><i class="bi bi-folder-plus"></i></a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th class="text-end">
                        Actions
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.User)
                        </th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.User.Id)
                            </td>*@
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-clipboard"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>