@using MVCAddressBook.Services.Interfaces
@inject IImageService imageService
@model MVCAddressBook.Models.ViewModels.ContactIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row row-cols-1 row-cols-md-2">
    <div class="col">
        <form method="post" asp-controller="Contacts" asp-action="SearchContacts">
            <input type="text" name="searchString" class="form-control" placeholder="Search..." />
            <button class="btn btn-outline-secondary" type="submit">Search</button>
        </form>
    </div>
    <div class="col">
        <form method="post" asp-controller="Contacts" asp-action="FilterContacts">
            <select name="categoryId" class="form-select" asp-items="Model.CategoryFilter"> <!--This line of code creates a filter dropdown menu-->
                <option>Select a Category</option> <!--Pushes Select a Category to the top of a dropdown-->
            </select>
            <button class="btn btn-outline-secondary" type="submit">Filter</button>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Birthday
            </th>
            <th>
                Address 1
            </th>
            <th>
                Address 2
            </th>
            <th>
                City
            </th>
            <th>
                State
            </th>
            <th>
                Zip Code
            </th>
            <th>
                Email
            </th>
            <th>
                Phone
            </th>
            <th>
                Created
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Contacts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birthday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZipCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageData)
                </td>
                <td>
                    <img src="@imageService.DecodeImage(item.ImageData, item.ImageType)" alt="contact photo" class="img-fluid" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FullName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
